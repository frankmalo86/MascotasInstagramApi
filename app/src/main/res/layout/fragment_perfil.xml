<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.perfilFragment">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="@dimen/ancho_imagen"
        android:layout_height="@dimen/alto_imagen"
        android:src="@drawable/p12"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#8BC34A"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tvNombreMiMascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre_mi_mascota"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="@dimen/nombre_mi_mascota"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvMiMascota"
        android:layout_centerHorizontal="true">
    </android.support.v7.widget.RecyclerView>


</LinearLayout>


